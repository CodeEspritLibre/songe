# Actions for ruby project Songe

task default: [:test]

desc "Remove the signature files"
task :clean do
  puts "Cleaning packages"
  `rm test.txt.sgsig SHA256SUM.asc`
end

desc "Test a songe verification"
task :test do
  puts "Testing verification"
  puts `./songe --verbose --verify test.txt`
  puts `./songev test.txt`
end

desc "Sign the files with Keybase PGP"
task :sign do
  puts "Signing songe/songev"
  `sha256sum songe songev | keybase pgp sign --clearsign > SHA256SUM.asc`
end

desc "Verify the checksums of scripts"
task :verif do
  puts "Verifying songe/songev"
  puts `keybase pgp verify --infile SHA256SUM.asc && grep ' songe' SHA256SUM.asc | sha256sum --check`
end

desc "Commit and push the last changes"
task :push, [:msg, :v] do |t, args|
  puts "Commiting and pushing changes"
  puts `git commit --all --gpg-sign --message='#{args[:msg]} v#{args[:v]}' && git push`
end

